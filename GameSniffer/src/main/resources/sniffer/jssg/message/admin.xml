<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config PUBLIC "//Message/" "message.dtd">
<config namespace="admin">
    
    <protocol id="0x00010107" alias="info">
        <toServer desc="获取用户的信息" class="com.kueem.webgame.game.action.background.UserAdminAction" method="info">
            <param fieldName="uid" tag="1" fieldType="string"/>
        </toServer>
    </protocol>
    
    <protocol id="0x00011007" alias="adminCmd">
        <toServer desc="管理员命令" class="com.kueem.webgame.game.action.background.UserAdminAction" method="adminCmd">
            <param fieldName="cmd" tag="1" fieldType="string"/>
            <param fieldName="cmdParam" tag="2" fieldType="string"/>
        </toServer>
    </protocol>
    
    <protocol id="0x00010207" alias="infoResult">
        <toClient desc="获取用户的信息" proto="true" messageClass="com.kueem.webgame.game.protobuf.UserProfileBuffers.UserProfileProto">
        </toClient>
    </protocol>
    
    <protocol id="0x00010307" alias="modifyInfo">
        <toServer desc="修改用户信息" class="com.kueem.webgame.game.action.background.UserAdminAction" method="modifyInfo">
            <param fieldName="uid" tag="1" fieldType="string"/>
            <param fieldName="name" tag="2" fieldType="string"/>
            <param fieldName="level" tag="3" fieldType="int32"/>
            <param fieldName="bagSize" tag="4" fieldType="int32"/>
            <param fieldName="jobId" tag="5" fieldType="int32"/>
            <param fieldName="xp" tag="6" fieldType="int64"/>
            <param fieldName="gender" tag="7" fieldType="string"/>
            <param fieldName="coin" tag="8" fieldType="int32"/>
            <param fieldName="bind_coin" tag="9" fieldType="int32"/>
            <param fieldName="cash" tag="10" fieldType="int64"/>
            <param fieldName="bind_cash" tag="11" fieldType="int64"/>
            <param fieldName="ban_login" tag="12" fieldType="bool"/>
            <param fieldName="ban_talk" tag="13" fieldType="bool"/>
        </toServer>
    </protocol>
    
    <protocol id="0x00010407" alias="infoSuccess">
        <toClient desc="后台操作成功与否消息" proto="true" messageClass="com.kueem.webgame.web.admin.protobuf.BackgroundOperateProto.BackgroundOperate">
        </toClient>
    </protocol>
    
    <protocol id="0x00010507" alias="addItem">
        <toServer desc="添加物品" class="com.kueem.webgame.game.action.background.UserAdminAction" method="addItem">
            <param fieldName="uid" tag="1" fieldType="string"/>
            <param fieldName="itemId" tag="2" fieldType="int32"/>
            <param fieldName="itemType" tag="3" fieldType="int32"/>
            <param fieldName="number" tag="4" fieldType="int32"/>
        </toServer>
    </protocol>
    
    <protocol id="0x00010607" alias="initUser">
        <toServer desc="初始化用户数据" class="com.kueem.webgame.game.action.background.UserAdminAction" method="initUser">
            <param fieldName="uid" tag="1" fieldType="string"/>
        </toServer>
    </protocol>
    
    <protocol id="0x00010707" alias="sendSystemMail">
        <toServer desc="发送系统邮件" class="com.kueem.webgame.game.action.background.UserAdminAction" method="sendSystemMail">
            <param fieldName="title" tag="1" fieldType="string"/>
            <param fieldName="content" tag="2" fieldType="string"/>
            <param fieldName="attachment" tag="3" fieldType="string"/>
            <param fieldName="uids" tag="4" fieldType="string" repeated="true"/>
        </toServer>
    </protocol>
    
    <protocol id="0x00010A07" alias="recharge">
        <toServer desc="充值" class="com.kueem.webgame.game.action.background.UserAdminAction" method="recharge">
            <param fieldName="uid" tag="1" fieldType="string"/>
            <param fieldName="type" tag="2" fieldType="int32"/>
            <param fieldName="money" tag="3" fieldType="int32"/>
            <param fieldName="secret_key" tag="4" fieldType="string"/>
            <param fieldName="order_id" tag="5" fieldType="string"/>
        </toServer>
    </protocol>
    <protocol id="0x00010C07" alias="userInfo">
        <toClient desc="获取用户数据">
            <param fieldName="id" tag="1" fieldType="string"/>
            <param fieldName="platformid" tag="2" fieldType="string"/>
            <param fieldName="gender" tag="3" fieldType="string"/>
            <param fieldName="camp" tag="4" fieldType="int32"/>
            <param fieldName="serverid" tag="5" fieldType="int32"/>
            <param fieldName="vip_level" tag="6" fieldType="int32"/>
            <param fieldName="level" tag="7" fieldType="int32"/>
            <param fieldName="job_id" tag="8" fieldType="int32"/>
            <param fieldName="state" tag="9" fieldType="int32"/>
            <param fieldName="name" tag="10" fieldType="string"/>
        </toClient>
        <toServer desc="获取用户数据" class="com.kueem.webgame.game.action.background.UserAdminAction" method="userInfo">
            <param fieldName="platformid" tag="1" fieldType="string"/>
            <param fieldName="serverid" tag="2" fieldType="int32"/>
            <param fieldName="sessionKey" tag="3" fieldType="string"/>
            <param fieldName="vip" tag="4" fieldType="bool"/>
            <param fieldName="vipLevel" tag="5" fieldType="int32"/>
            <param fieldName="yearVip" tag="6" fieldType="bool"/>
            <param fieldName="pf" tag="7" fieldType="string"/>
            <param fieldName="userip" tag="8" fieldType="string"/>
            <param fieldName="pfkey" tag="9" fieldType="string"/>
            <param fieldName="sex" tag="10" fieldType="string"/>
            <param fieldName="country" tag="11" fieldType="string"/>
            <param fieldName="province" tag="12" fieldType="string"/>
            <param fieldName="city" tag="13" fieldType="string"/>
            <param fieldName="register" tag="14" fieldType="bool"/>
        </toServer>
    </protocol>
    <protocol id="0x00010D07" alias="wordFilter">
        <toClient desc="返回过滤结果">
            <param fieldName="isDirty" tag="1" fieldType="bool"/>
            <param fieldName="filterdWord" tag="2" fieldType="string"/>
        </toClient>
        <toServer desc="过滤敏感词" class="com.kueem.webgame.game.action.background.UserAdminAction" method="wordFilter">
            <param fieldName="word" tag="1" fieldType="string"/>
        </toServer>
    </protocol>
    <protocol id="0x00011207" alias="finishInitRole">
        <toClient desc="完全角色选择">
            <param fieldName="result" tag="1" fieldType="int32" desc="返回码"/>
            <param fieldName="msg" tag="2" fieldType="string" desc="返回信息"/>
        </toClient>
        <toServer desc="完成角色选择" class="com.kueem.webgame.game.action.background.UserAdminAction" method="finishInitRole">
            <param fieldName="uid" tag="1" fieldType="string"/>
            <param fieldName="gender" tag="2" fieldType="string"/>
            <param fieldName="name" tag="3" fieldType="string"/>
            <param fieldName="jobType" tag="4" fieldType="int32"/>
        </toServer>
    </protocol>
    <protocol id="0x00011307" alias="putUserInfo">
        <toServer desc="用户从web端登录时,把相关的用户信息传递过来" class="com.kueem.webgame.game.action.background.UserAdminAction" method="putUserInfo">
            <param fieldName="userInfo" tag="1" fieldType="string" repeated="true" desc="顺序依次为:id,sessionKey,isVip,vipLevel,isYearVip,pf,userIp,pfkey"/>
        </toServer>
    </protocol>
    <protocol id="0x00011407" alias="beforeLoadingLog">
        <toServer desc="用户开始加载游戏的时候，通知服务器端记录日志" class="com.kueem.webgame.game.action.background.UserAdminAction" method="beforeLoadingLog">
            <param fieldName="pid" tag="1" fieldType="string" desc="用户平台ID"/>
            <param fieldName="init" tag="2" fieldType="bool" desc="是否选过角色"/>
        </toServer>
    </protocol>
    <protocol id="0x00011507" alias="player_info">
        <toClient desc="返回用户信息">
            <param fieldName="info" tag="1" fieldType="string" desc="json格式的字符串"/>
        </toClient>
        <toServer desc="批量获取用户数据" class="com.kueem.webgame.game.action.background.UserAdminAction" method="player_info">
            <param fieldName="serverid" tag="1" fieldType="int32" desc="服务器id"/>
            <param fieldName="users" tag="2" fieldType="string" desc="用户id列表，逗号隔开"/>
        </toServer>
    </protocol>
    <protocol id="0x00011607" alias="player_online">
        <toClient desc="返回在线人数">
            <param fieldName="online_nums" tag="1" fieldType="int32"/>
        </toClient>
        <toServer desc="获取在线人数" class="com.kueem.webgame.game.action.background.UserAdminAction" method="player_online">
        </toServer>
    </protocol>
    <protocol id="0x00011707" alias="rookie_card">
        <toClient desc="返回新手卡id">
            <param fieldName="id" tag="1" fieldType="string"/>
        </toClient>
        <toServer desc="获取新手卡" class="com.kueem.webgame.game.action.background.UserAdminAction" method="rookie_card">
        	<param fieldName="serverid" tag="1" fieldType="int32" desc="服务器id"/>
            <param fieldName="platformid" tag="2" fieldType="string" desc="平台id"/>
        </toServer>
    </protocol>
</config>
