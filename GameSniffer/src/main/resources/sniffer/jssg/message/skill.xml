<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config PUBLIC "//Message/" "message.dtd">
<config namespace="skill">


    <protocol id="0x000E0102" alias="learn">
        <toServer desc="学习技能" class="com.kueem.webgame.game.action.game.SkillAction" method="learn">
            <param fieldName="skillId" tag="1" fieldType="int32" />
        </toServer>
    </protocol>

    <protocol id="0x000E0202" alias="learnResult">
        <toClient desc="学习技能结果">
            <param fieldName="state" tag="1" fieldType="int32" />
            <param fieldName="skillId" tag="2" fieldType="int32" />
        </toClient>
    </protocol>

    <protocol id="0x000E0302" alias="autoCast">
        <toServer desc="设置自动释放" class="com.kueem.webgame.game.action.game.SkillAction" method="autoCast">
            <param fieldName="opType" tag="1" fieldType="int32" />
            <param fieldName="skillId" tag="2" fieldType="int32" />
            <param fieldName="skillType" tag="3" fieldType="int32" />
        </toServer>
    </protocol>

    <protocol id="0x000E0402" alias="changeKey">
        <toServer desc="修改快捷键" class="com.kueem.webgame.game.action.game.SkillAction" method="changeKey">
            <param fieldName="position" tag="1" fieldType="int32" />
            <param fieldName="skillId" tag="2" fieldType="int32" />
            <param fieldName="skillType" tag="3" fieldType="int32" />
        </toServer>
    </protocol>

    <protocol id="0x000E0502" alias="lockedKey">
        <toServer desc="锁定快捷键栏" class="com.kueem.webgame.game.action.game.SkillAction" method="lockedKey">
            <param fieldName="locked" tag="1" fieldType="int32" />
        </toServer>
    </protocol>

    <protocol id="0x000E0602" alias="swapKey">
        <toServer desc="交换两个快捷键" class="com.kueem.webgame.game.action.game.SkillAction" method="swapKey">
            <param fieldName="position1" tag="1" fieldType="int32" />
            <param fieldName="position2" tag="2" fieldType="int32" />
        </toServer>
    </protocol>
    <protocol id="0x000E0702" alias="cancleKey">
        <toServer desc="取消一个快捷键" class="com.kueem.webgame.game.action.game.SkillAction" method="cancleKey">
            <param fieldName="position" tag="1" fieldType="int32" />
        </toServer>
    </protocol>
    <protocol id="0x000E0802" alias="oneKeyLearn">
        <toServer desc="一键学习技能" class="com.kueem.webgame.game.action.game.SkillAction" method="oneKeyLearn">
        </toServer>
    </protocol>

    <protocol id="0x000E0902" alias="oneKeyLearnRet">
        <toClient desc="一键学习技能结果">
            <param fieldName="ret" tag="1" fieldType="int32" desc="1 成功 2 没有可以学习的 3 失败" />
            <param fieldName="skills" tag="2" fieldType="int32" repeated="true" desc="升级或者学习的技能" />
        </toClient>
    </protocol>


</config>