<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config PUBLIC "//Message/" "message.dtd">
<config namespace="mail">
    <protocol id="0x00100102" alias="getMail">
        <toServer desc="邮件系统：获取邮件列表" class="com.kueem.webgame.game.action.game.MailAction" method="getMail">
            <param fieldName="type" tag="1" fieldType="int32" />
            <param fieldName="timestamp" tag="2" fieldType="int64" />
        </toServer>
    </protocol>
    <protocol id="0x00100202" alias="syncMailResult">
        <toClient desc="同步用户邮件" proto="true" messageClass="com.kueem.webgame.game.protobuf.UserMailBuffers.UserMail">
        </toClient>
    </protocol>
    <protocol id="0x00100302" alias="newMailNotice">
        <toClient desc="通知用户收到新邮件">
            <param fieldName="num" tag="1" fieldType="int64" />
        </toClient>
    </protocol>
    <protocol id="0x00100402" alias="sendUserMail">
        <toServer desc="邮件系统：用户发送邮件" class="com.kueem.webgame.game.action.game.MailAction" method="sendUserMail">
            <param fieldName="reciever_name" tag="1" fieldType="string" />
            <param fieldName="title" tag="2" fieldType="string" />
            <param fieldName="content" tag="3" fieldType="string" />
            <param fieldName="item_indexes" tag="4" fieldType="int32" repeated="true" />
            <param fieldName="coin" tag="5" fieldType="int32" />
        </toServer>
    </protocol>
    <protocol id="0x00100602" alias="fetchAttachment">
        <toServer desc="邮件系统：提取附件" class="com.kueem.webgame.game.action.game.MailAction" method="fetchAttachment">
            <param fieldName="mail_id" tag="1" fieldType="int32" />
            <param fieldName="position" tag="2" fieldType="int32" />
        </toServer>
    </protocol>
    <protocol id="0x00100702" alias="deleteMail">
        <toServer desc="邮件系统：删除邮件" class="com.kueem.webgame.game.action.game.MailAction" method="deleteMail">
            <param fieldName="mail_ids" tag="1" fieldType="int32" repeated="true" />
            <param fieldName="type" tag="2" fieldType="int32" />
            <param fieldName="timestamp" tag="3" fieldType="int64" />
        </toServer>
    </protocol>
    <protocol id="0x00100802" alias="sendMailResult">
        <toClient desc="发送邮件的结果">
            <param fieldName="result" tag="1" fieldType="bool" />
        </toClient>
    </protocol>
    <protocol id="0x00100902" alias="autoFilter">
        <toServer desc="邮件系统：设置自动过滤黑名单" class="com.kueem.webgame.game.action.game.MailAction" method="autoFilter">
            <param fieldName="flag" tag="1" fieldType="bool" />
        </toServer>
    </protocol>
    <protocol id="0x00100A02" alias="deleteAfterFetch">
        <toServer desc="邮件系统：设置提取附件后删除邮件" class="com.kueem.webgame.game.action.game.MailAction" method="deleteAfterFetch">
            <param fieldName="flag" tag="1" fieldType="bool" />
        </toServer>
    </protocol>
    <protocol id="0x00100B02" alias="getMailContent">
        <toServer desc="邮件系统：获取邮件内容" class="com.kueem.webgame.game.action.game.MailAction" method="getMailContent">
            <param fieldName="mail_id" tag="1" fieldType="int32" />
        </toServer>
    </protocol>
    <protocol id="0x00100C02" alias="mailContentReturn">
        <toClient desc="返回邮件的内容">
            <param fieldName="content" tag="1" fieldType="string" />
            <param fieldName="mail_id" tag="2" fieldType="int32" />
        </toClient>
    </protocol>
    <protocol id="0x00100D02" alias="getNewMail">
        <toServer desc="邮件系统：获取新邮件列表" class="com.kueem.webgame.game.action.game.MailAction" method="getNewMail">
            <param fieldName="beginTime" tag="1" fieldType="int64" />
            <param fieldName="endTime" tag="2" fieldType="int64" />
        </toServer>
    </protocol>
    <protocol id="0x00100E02" alias="fetchAll">
        <toClient desc="返回已提取附件的邮件">
            <param fieldName="ids" tag="1" fieldType="int32" repeated="true" />
        </toClient>
        <toServer desc="邮件系统：一键提取所有邮件中的附件" class="com.kueem.webgame.game.action.game.MailAction" method="fetchAll">
        </toServer>
    </protocol>
</config>