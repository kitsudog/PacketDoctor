<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config PUBLIC "//Message/" "message.dtd">
<config namespace="move">

    <protocol id="0x000A0102" alias="move">
        <toServer desc="移动到指定地点" class="com.kueem.webgame.game.action.game.MoveAction" method="move">
            <param fieldName="serverTime" tag="1" fieldType="string" />
            <param fieldName="startX" tag="2" fieldType="int32" />
            <param fieldName="startY" tag="3" fieldType="int32" />
            <param fieldName="targetX" tag="4" fieldType="int32" />
            <param fieldName="targetY" tag="5" fieldType="int32" />
            <param fieldName="path" tag="6" fieldType="string" />
        </toServer>
    </protocol>

    <protocol id="0x000A0202" alias="syncPath">
        <toClient desc="同步其他玩家路径">
            <param fieldName="roleType" tag="1" fieldType="int32" />
            <param fieldName="roleId" tag="2" fieldType="string" />
            <param fieldName="goalX" tag="3" fieldType="int32" />
            <param fieldName="goalY" tag="4" fieldType="int32" />
            <param fieldName="path" tag="5" fieldType="string" />
        </toClient>
    </protocol>
    <protocol id="0x000A0302" alias="syncPlayerPos">
        <toClient desc="将玩家拉回到某个点">
            <param fieldName="playerId" tag="1" fieldType="string" />
            <param fieldName="x" tag="2" fieldType="int32" />
            <param fieldName="y" tag="3" fieldType="int32" />
        </toClient>
    </protocol>

    <protocol id="0x000A0402" alias="notInMap">
        <toClient desc="将玩家拉回到某个点">
        </toClient>
    </protocol>

    <protocol id="0x000A0902" alias="sync">
        <toServer desc="请求移动对值" class="com.kueem.webgame.game.action.game.MoveAction" method="sync">
            <param fieldName="uid" tag="1" fieldType="string" />
        </toServer>
    </protocol>

    <protocol id="0x000A0B02" alias="stop">
        <toClient desc="停止角色移动">
            <param fieldName="type" tag="1" fieldType="int32" />
            <param fieldName="id" tag="2" fieldType="string" />
        </toClient>
        <toServer desc="通知服务器端停止移动" class="com.kueem.webgame.game.action.game.MoveAction" method="stop">
        </toServer>
    </protocol>
    <protocol id="0x000A0C02" alias="notifyMove">
        <toClient desc="通知客户端发移动请求">
            <param fieldName="type" tag="1" fieldType="int32" />
            <param fieldName="id" tag="2" fieldType="string" />
            <param fieldName="x" tag="3" fieldType="int32" />
            <param fieldName="y" tag="4" fieldType="int32" />
            <param fieldName="op" tag="5" fieldType="int32" />
        </toClient>
    </protocol>
    <protocol id="0x000A0D02" alias="flyByHorse">
        <toClient desc="骑马飞到指定位置">
            <param fieldName="target_x" tag="1" fieldType="int32" />
            <param fieldName="target_y" tag="2" fieldType="int32" />
            <param fieldName="time" tag="3" fieldType="int32" />
            <param fieldName="type" tag="4" fieldType="int32" />
            <param fieldName="id" tag="5" fieldType="string" />
        </toClient>
    </protocol>
    <protocol id="0x000A0E02" alias="notifyOrganStep">
        <toClient desc="通知客户端机关触发效果的步骤">
            <param fieldName="organ_id" tag="1" fieldType="int32" />
            <param fieldName="step" tag="2" fieldType="int32" />
        </toClient>
    </protocol>

    <protocol id="0x000A0F02" alias="notifyMoveToPotin">

    </protocol>
</config>