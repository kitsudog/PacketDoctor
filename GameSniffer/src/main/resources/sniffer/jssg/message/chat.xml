<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config PUBLIC "//Message/" "message.dtd">
<config namespace="chat">
	<!-- 聊天模块 -->

	<!-- 接收参数：1 频道类型（私人，所有人，队伍，频道等等） 2 目标用户（只有私聊有这个参数） 3 目标用户 -->

	<protocol id="0x00050102" alias="send">
		<!-- 返回参数：1 发送者用户名，2 频道类型，3 目标用户名称 4 消息正文 5 时间 6 性别 7 vip等级 8 阵营 9 发送者ID 
			10 职业 -->
		<toClient desc="聊天信息">
			<param fieldName="senderName" tag="1" fieldType="string" />
			<param fieldName="channelType" tag="2" fieldType="int32" />
			<param fieldName="receiverName" tag="3" fieldType="string" />
			<param fieldName="msg" tag="4" fieldType="string" />
			<param fieldName="time" tag="5" fieldType="int64" />
			<param fieldName="gender" tag="6" fieldType="string" />
			<param fieldName="vipLevel" tag="7" fieldType="int32" />
			<param fieldName="camp" tag="8" fieldType="int32" />
			<param fieldName="senderUid" tag="9" fieldType="string" />
			<param fieldName="job" tag="10" fieldType="int32" />
		</toClient>
		<toServer desc="聊天"
			class="com.kueem.webgame.game.action.game.ChatAction" method="send">
			<param fieldName="channelType" tag="1" fieldType="int32" />
			<param fieldName="targetName" tag="2" fieldType="string" />
			<param fieldName="message" tag="3" fieldType="string" />
		</toServer>
	</protocol>

	<!-- id 快照ID type 类型 relId 引用的IDS -->
	<protocol id="0x00050202" alias="notifySnapshot">
		<toClient desc="通知客户端生成快照">
			<param fieldName="snapshotId" tag="1" fieldType="string" />
			<param fieldName="type" tag="2" fieldType="int32" />
			<param fieldName="relId" tag="3" fieldType="int32" />
		</toClient>
	</protocol>

	<!-- id 快照ID snapshot快照 -->
	<protocol id="0x00050302" alias="addSnapshot">
		<toServer desc="客户端将快照信息传递到服务器端"
			class="com.kueem.webgame.game.action.game.ChatAction" method="addSnapshot">
			<param fieldName="snapshotId" tag="1" fieldType="string" />
			<param fieldName="snapshot" tag="2" fieldType="string" />
		</toServer>
	</protocol>

	<!-- id 快照ID -->
	<protocol id="0x00050402" alias="findSnapshot">
		<toServer desc="通知客户端生成快照"
			class="com.kueem.webgame.game.action.game.ChatAction" method="findSnapshot">
			<param fieldName="snapshotId" tag="1" fieldType="string" />
		</toServer>
	</protocol>

	<!-- id 快照ID snapshot 快照 -->
	<protocol id="0x00050502" alias="snapshotInfo">
		<toClient desc="快照信息">
			<param fieldName="snapshotId" tag="1" fieldType="string" />
			<param fieldName="snapshot" tag="2" fieldType="string" />
		</toClient>
	</protocol>

	<!-- id 道具或者装备ID -->
	<protocol id="0x00050602" alias="generateSnapshotId">
		<toServer desc="请求快照ID"
			class="com.kueem.webgame.game.action.game.ChatAction" method="generateSnapshotId">
			<param fieldName="number" tag="1" fieldType="int32" />
		</toServer>
	</protocol>

	<protocol id="0x00050702" alias="syncSnapshotId">
		<toClient desc="返回快照ID">
			<param fieldName="snapshotIds" tag="1" fieldType="string"
				repeated="true" />
		</toClient>
	</protocol>


	<protocol id="0x00050802" alias="syncCYL">
		<toClient desc="同步传音令免费次数">
			<param fieldName="num" tag="1" fieldType="int32" />
		</toClient>
		<toServer desc="请求传音令免费次数"
			class="com.kueem.webgame.game.action.game.ChatAction" method="syncCYL">
		</toServer>
	</protocol>

</config>