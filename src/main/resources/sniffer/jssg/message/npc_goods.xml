<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config PUBLIC "//Message/" "message.dtd">
<config namespace="npc_goods">
	<!--public final static int NPC_BUSINESS = 0x19; -->
	<protocol id="0x00190102" alias="buy">
		<toServer desc="购买" class="com.kueem.webgame.game.action.game.NpcGoodsAction" method="buy">
			<param fieldName="id" tag="1" fieldType="int32" />
			<param fieldName="num" tag="2" fieldType="int32" />
		</toServer>
	</protocol>
	<!--protocol id="0x00190202"> <toServer desc="出售" class="com.kueem.webgame.game.action.game.NpcGoodsAction" method="sell"> <param fieldName="index" tag="1" fieldType="int32"/> 
		</toServer> </protocol -->
	<protocol id="0x00190202" alias="buyBack">
		<toServer desc="回购" class="com.kueem.webgame.game.action.game.NpcGoodsAction" method="buyBack">
			<param fieldName="index" tag="1" fieldType="int32" />
		</toServer>
	</protocol>

	<protocol id="0x00190302" alias="buyGoods">
		<toServer desc="购买" class="com.kueem.webgame.game.action.game.NpcGoodsAction" method="buyGoods">
			<param fieldName="id" tag="1" fieldType="int32" />
			<param fieldName="num" tag="2" fieldType="int32" />
			<param fieldName="source" tag="3" fieldType="int32" />
		</toServer>
	</protocol>

	<protocol id="0x00190402" alias="syncPanicGoods">
		<toClient desc="同步抢购商品返回">
			<param fieldName="ids" tag="1" fieldType="int32" repeated="true" />
			<param fieldName="nums" tag="2" fieldType="int32" repeated="true" />
			<param fieldName="userNums" tag="3" fieldType="int32" repeated="true" />
			<param fieldName="overTime" tag="4" fieldType="int64" />
		</toClient>
		<toServer desc="同步抢购商品" class="com.kueem.webgame.game.action.game.NpcGoodsAction" method="syncPanicGoods">
		</toServer>
	</protocol>

	<protocol id="0x00190502" alias="buyGoodsAndUse">
		<toServer desc="购买并且使用" class="com.kueem.webgame.game.action.game.NpcGoodsAction" method="buyGoodsAndUse">
			<param fieldName="id" tag="1" fieldType="int32" />
			<param fieldName="num" tag="2" fieldType="int32" />
			<param fieldName="source" tag="3" fieldType="int32" />
		</toServer>
	</protocol>
</config>