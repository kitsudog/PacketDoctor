<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config PUBLIC "//Message/" "message.dtd">
<config namespace="user">
	<protocol id="0x001D0102" alias="sync">
		<toServer desc="请求每日活动进度"
			class="com.kueem.webgame.game.action.game.DailyActivityAction"
			method="sync">
		</toServer>
	</protocol>
	<protocol id="0x001D0202" alias="syncReply">
		<toClient desc="返回每日活动进度">
			<param fieldName="progress" tag="1" fieldType="int32" desc="进度" />
			<param fieldName="detailType" tag="2" fieldType="int32"
				repeated="true" desc="详细信息类型" />
			<param fieldName="detailInfo" tag="3" fieldType="int32"
				repeated="true" desc="详细信息" /><!-- 当前次数 -->
			<param fieldName="state" tag="4" fieldType="int32" repeated="true"
				desc="状态 0 未领取 ,1 未完成 ,2 已领取" />
			<param fieldName="reward_exp" tag="5" fieldType="int32"
				repeated="true" desc="奖励的经验" />
			<param fieldName="received" tag="6" fieldType="int32" desc="已经领奖的进度" />
			<param fieldName="onlineTime" tag="7" fieldType="int32"
				desc="在线时长活动还需要的时间   大于0 需要的时间 0 已经到了 -1 已经计算进完成度了" />
		</toClient>
	</protocol>
	<protocol id="0x001D0302" alias="reward">
		<toServer desc="领取奖励"
			class="com.kueem.webgame.game.action.game.DailyActivityAction"
			method="reward">
		</toServer>
	</protocol>
	<protocol id="0x001D0402" alias="rewardRet">
		<toClient desc="领取了那些奖励">
			<param fieldName="rewardList" tag="1" fieldType="int32"
				repeated="true" desc="进度" />
		</toClient>
	</protocol>

	<protocol id="0x001D0502" alias="getReward">
		<toServer desc="领取单个任务奖励 "
			class="com.kueem.webgame.game.action.game.DailyActivityAction"
			method="getReward">
			<param fieldName="dailyId" tag="1" fieldType="int32" />
		</toServer>
	</protocol>

	<protocol id="0x001D0602" alias="getGoalOfTodayInfo">
		<toClient desc="取今天的培养目标">
			<param fieldName="id" tag="1" fieldType="int32" />
			<param fieldName="state" tag="2" fieldType="int32" /><!-- 领取状态0未完居,1完成,2已领奖 -->
		</toClient>
		<toServer desc="取今天的培养目标　"
			class="com.kueem.webgame.game.action.game.DailyActivityAction"
			method="getGoalOfTodayInfo">
		</toServer>
	</protocol>


	<protocol id="0x001D0702" alias="getGoalOfTodayReward">
		<toServer desc="取今天的培养目标的奖励　"
			class="com.kueem.webgame.game.action.game.DailyActivityAction"
			method="getGoalOfTodayReward">
			<param fieldName="dailyId" tag="1" fieldType="int32" />
		</toServer>
	</protocol>


	<protocol id="0x001D1002" alias="requestGotDailyRewardItemNum">
		<toClient desc="同步今天已经领取了XXX的数量">
			<param fieldName="index" tag="1" fieldType="int32" />
			<param fieldName="num" tag="2" fieldType="int32" />
		</toClient>
		<toServer desc="请求今天领取XXX的数量"
			class="com.kueem.webgame.game.action.game.DailyActivityAction"
			method="requestGotDailyRewardItemNum">
			<param fieldName="index" tag="1" fieldType="int32" />
		</toServer>
	</protocol>


	<protocol id="0x001D1102" alias="getDailyRewardItem">
		<toServer desc="领取每是奖励物品　免费的哦"
			class="com.kueem.webgame.game.action.game.DailyActivityAction"
			method="getDailyRewardItem">
			<param fieldName="index" tag="1" fieldType="int32" />
		</toServer>
	</protocol>




</config>