<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config PUBLIC "//Message/" "message.dtd">
<config namespace="buff">
    <protocol id="0x00070102" alias="addBuff">
        <toClient desc="增加了一个buff">
            <param fieldName="bidInMap" tag="1" fieldType="int64" />
            <param fieldName="bid" tag="2" fieldType="int32" />
            <param fieldName="allTime" tag="3" fieldType="int64" />
            <param fieldName="remainTime" tag="4" fieldType="int64" />
            <param fieldName="soldierId" tag="5" fieldType="string" />
            <param fieldName="x" tag="6" fieldType="int32" />
            <param fieldName="y" tag="7" fieldType="int32" />
        </toClient>
    </protocol>

    <protocol id="0x00070202" alias="removeBuff">
        <toClient desc="移除了一个buff">
            <param fieldName="bidInMap" tag="1" fieldType="int64" />
            <param fieldName="bid" tag="2" fieldType="int32" />
            <param fieldName="soldierId" tag="3" fieldType="string" />
        </toClient>
    </protocol>

    <protocol id="0x00070302" alias="changeBuff">
        <toClient desc="由于buff的作用某个目标的属性改变了">
            <param fieldName="bidInMap" tag="1" fieldType="int64" />
            <param fieldName="soldierId" tag="2" fieldType="string" />
            <param fieldName="type" tag="3" fieldType="int32" />
            <param fieldName="changeValue" tag="3" fieldType="int32" />
            <param fieldName="changeAfterValue" tag="3" fieldType="int32" />
        </toClient>
    </protocol>

    <protocol id="0x00070402" alias="refreshBuff">
        <toClient desc="刷新buff时间">
            <param fieldName="incId" tag="1" fieldType="int64" desc="自增ID" />
            <param fieldName="bid" tag="2" fieldType="int32" desc="buff配置ID" />
            <param fieldName="soldierId" tag="3" fieldType="string" desc="用户ID" />
            <param fieldName="allTime" tag="4" fieldType="int64" desc="总时间" />
            <param fieldName="remainTime" tag="5" fieldType="int64" desc="剩余时间" />
            <param fieldName="soldierType" tag="6" fieldType="int32" desc="战士类型" />
        </toClient>
    </protocol>
</config>