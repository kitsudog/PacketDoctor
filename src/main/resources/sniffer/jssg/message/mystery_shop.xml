<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config PUBLIC "//Message/" "message.dtd">
<config namespace="mystery_shop">
    <protocol id="0x00290102" alias="mysteryShopInfo">
        <toClient desc="神秘商城的基本信息返回">
            <param fieldName="Integral" tag="1" fieldType="int32" />
            <param fieldName="Luckly" tag="2" fieldType="int32" />
            <param fieldName="FreeTime" tag="3" fieldType="int32" /><!-- 今天已经刷新的次数 -->
        </toClient>
        <toServer desc="神秘商城的基本信息" class="com.kueem.webgame.game.action.game.MysteryShopAction" method="mysteryShopInfo">
        </toServer>
    </protocol>


    <protocol id="0x00290202" alias="syncShopData">
        <toClient desc="神秘商品数据返回">
            <param fieldName="dataIds" tag="1" fieldType="int32" repeated="true" />
            <param fieldName="states" tag="2" fieldType="int32" repeated="true" />
        </toClient>
        <toServer desc="神秘商品数据" class="com.kueem.webgame.game.action.game.MysteryShopAction" method="syncShopData">
        </toServer>
    </protocol>

    <protocol id="0x00290302" alias="storageShopData">
        <toClient desc="神秘商品仓库数据" proto="true" messageClass="com.kueem.webgame.game.protobuf.UserBagProtobuf.UserBag">
        </toClient>
        <toServer desc="神秘商品仓库数据" class="com.kueem.webgame.game.action.game.MysteryShopAction" method="storageShopData">
        </toServer>
    </protocol>


    <protocol id="0x00290402" alias="luckData">
        <toClient desc="">
            <param fieldName="userId" tag="1" fieldType="string" desc="用户id" />
            <param fieldName="userName" tag="2" fieldType="string" desc="用户名字" />
            <param fieldName="camp" tag="3" fieldType="int32" desc="用户阵营" />
            <param fieldName="mysteryId" tag="4" fieldType="int32" desc="mystery_shop表里的id" />
        </toClient>
    </protocol>

    <protocol id="0x00290502" alias="refreshShop">
        <toClient desc="刷新神秘数据返回">
            <param fieldName="state" tag="1" fieldType="int32" />
        </toClient>
        <toServer desc="刷新神秘数据 " class="com.kueem.webgame.game.action.game.MysteryShopAction" method="refreshShop">
            <param fieldName="refreshType" tag="1" fieldType="int32" desc="0:单个、1:多个" />
        </toServer>
    </protocol>

    <protocol id="0x00290602" alias="buyItem">
        <toClient desc="购买神秘物品返回">
            <param fieldName="state" tag="1" fieldType="int32" />
        </toClient>
        <toServer desc="购买神秘物品 " class="com.kueem.webgame.game.action.game.MysteryShopAction" method="buyItem">
            <param fieldName="itemId" tag="1" fieldType="int32" />
        </toServer>
    </protocol>


    <protocol id="0x00290702" alias="changeItem">
        <toClient desc="积好换物品物品返回">
            <param fieldName="state" tag="1" fieldType="int32" />
        </toClient>
        <toServer desc="积好换物品物品 " class="com.kueem.webgame.game.action.game.MysteryShopAction" method="changeItem">
            <param fieldName="itemId" tag="1" fieldType="int32" />
        </toServer>
    </protocol>


    <protocol id="0x00290802" alias="getItem">
        <toServer desc="仓库提取 " class="com.kueem.webgame.game.action.game.MysteryShopAction" method="getItem">
            <param fieldName="bagIndex" tag="1" fieldType="int32" />
        </toServer>
    </protocol>

    <protocol id="0x00290902" alias="getAllItem">
        <toServer desc="仓库提取 " class="com.kueem.webgame.game.action.game.MysteryShopAction" method="getAllItem">
        </toServer>
    </protocol>

</config>